{{# core.is_osx }}
function attach()
{
  hdiutil attach $1 -mountpoint /tempfiles/downloads/blah
  cd /tempfiles/downloads/blah
}

function detach()
{
  hdiutil detach /tempfiles/downloads/blah
}
{{/core.is_osx }}
#function that will both create and switch to the directory specified
function take()
{
   mkdir $1
   cd $1
}

